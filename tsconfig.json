{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "isolatedModules": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "strict": true
    },
    "include": [
        "src",
        "tests"
    ]
}